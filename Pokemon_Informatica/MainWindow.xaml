<Window x:Class="Pokemon_Informatica.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pokemon Informatica" Height="350" Width="525">
    <Grid Margin="10px">
        <Grid.RowDefinitions>
            <RowDefinition Height="30px"></RowDefinition>
            <RowDefinition Height="20px"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300px"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="125px"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <TextBox Name="PokemonNameBox" Grid.Column="0" Grid.Row="0"></TextBox>
        <Button Name="SearchButton" Grid.Column="2" Grid.Row="0" Height="30" VerticalAlignment="Top" Click="SearchButton_Click">Search</Button>
        <RichTextBox Name="ResultBox" Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="3"></RichTextBox>
    </Grid>
 
</Window>
